{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "es2022"],
    "strict": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "types": ["node"],

    "baseUrl": ".",                         // ✅ add this line
    "paths": { "@/*": ["./*"] }             // ✅ and this line
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
